#Backend Environment Variables
PORT=3000

# Database Connection
DB_HOST=db
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=auction_db
DB_SSL=false

POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password!@
POSTGRES_DB=auction_db


# JWT
JWT_SECRET=your_jwt_secret

# API Keys
RECAPTCHA_SECRET_KEY=...
# Optional: set to a test token to bypass captcha verification locally
RECAPTCHA_BYPASS_TOKEN=local-dev

# Auth
RESET_TOKEN_TTL_MINUTES=15
SELLER_REQUEST_TTL_DAYS=7

# Mailer
MAIL_HOST=...
MAIL_USER=...
MAIL_PASS=...

# Uploads
UPLOAD_MAX_FILE_SIZE_BYTES=5242880

# Frontend
FRONTEND_URL=http://localhost:5173
# or in list FRONTEND_URL=http://localhost:5173,http://127.0.0.1:5173
