#Backend Environment Variables
PORT=3000

# Database Connection
DB_HOST=db
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=auction_db
DB_SSL=false

POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password!@
POSTGRES_DB=auction_db


# JWT
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1h

# API Keys
RECAPTCHA_SECRET_KEY=...
# Optional: set to a test token to bypass captcha verification locally
RECAPTCHA_BYPASS_TOKEN=local-dev

# Auth
RESET_TOKEN_TTL_MINUTES=15
SELLER_REQUEST_TTL_DAYS=7
MIN_BIDDER_RATING_PERCENT=80
REFRESH_TOKEN_TTL_DAYS=7
REFRESH_TOKEN_SECRET=your_refresh_secret

# Seed accounts (optional)
BIDDER_EMAIL=bidder@example.com
BIDDER_PASSWORD=SellerPass123!
SELLER_EMAIL=seller@example.com
SELLER_PASSWORD=SellerPass123!
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=SellerPass123!

# Seller expiry job (approved sellers)
ENABLE_SELLER_EXPIRY=true
SELLER_EXPIRY_INTERVAL_MS=3600000

# Auction finalizer (optional)
ENABLE_AUCTION_FINALIZER=true
FINALIZE_INTERVAL_MS=60000

# Mailer
MAIL_HOST=...
MAIL_PORT=587
MAIL_USER=...
MAIL_PASS=...
MAIL_FROM=no-reply@example.com

# Uploads
UPLOAD_MAX_FILE_SIZE_BYTES=5242880

# Frontend
FRONTEND_URL=http://localhost:5173
# or in list FRONTEND_URL=http://localhost:5173,http://127.0.0.1:5173
