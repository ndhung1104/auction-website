# Base URLs
PLAYWRIGHT_BASE_URL=http://localhost:5173
PLAYWRIGHT_API_BASE_URL=http://localhost:3001

# Seeding (opt-in; requires backend support)
PLAYWRIGHT_ENABLE_SEED=false
PLAYWRIGHT_SEED_ENDPOINT=/api/testing/seed
PLAYWRIGHT_SEED_STATUS_ENDPOINT=/api/testing/seed-status

# Auth/login
PLAYWRIGHT_LOGIN_ENDPOINT=/api/auth/login
PLAYWRIGHT_AUTH_STORAGE_KEY=token

# Test accounts (fill with real test creds)
PLAYWRIGHT_BIDDER_EMAIL=bidder@example.com
PLAYWRIGHT_BIDDER_PASSWORD=changeme
PLAYWRIGHT_SELLER_EMAIL=seller@example.com
PLAYWRIGHT_SELLER_PASSWORD=changeme
PLAYWRIGHT_ADMIN_EMAIL=admin@example.com
PLAYWRIGHT_ADMIN_PASSWORD=changeme

# Mail capture API (optional; e.g., MailHog HTTP endpoint)
PLAYWRIGHT_MAIL_API=
